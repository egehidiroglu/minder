<div class="cards">
  <% @unfollowed_artists.each do |artist| %>
    <div>
      <div><%= artist.name %></div>
      <img src="<%= artist.poster_url %>" alt="Book poster"/>
      <%# Button to start following a artist %>
      <%= form_with url:create_followed_creator_path, method: :post do |f| %>
        <%= f.text_field :creator_id, type: :hidden, value: artist.id %>
        <%= f.submit %>
      <% end %>
    </div>
  <% end %>
</div>
