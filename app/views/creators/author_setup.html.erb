<div class="cards">
  <% @unfollowed_authors.each do |author| %>
    <div>
      <div><%= author.name %></div>
      <img src="<%= author.poster_url %>" alt="Book poster"/>
      <%= form_with url:create_followed_creator_path, method: :post do |f| %>
        <%= f.text_field :creator_id, type: :hidden, value: author.id %>
        <%= f.submit %>
      <% end %>
    </div>
  <% end %>
</div>
