<div class="cards">
  <% @unfollowed_directors.each do |director| %>
    <div>
      <div><%= director.name %></div>
      <img src="<%= director.poster_url %>" alt="Book poster"/>
      <%= form_with url:create_followed_creator_path, method: :post do |f| %>
        <%= f.text_field :creator_id, type: :hidden, value: director.id %>
        <%= f.submit %>
      <% end %>
    </div>
  <% end %>
</div>
