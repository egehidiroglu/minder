<h1>Here are all your followed creatorsğŸ¿</h1>
<%= link_to "Follow someone new!", my_creators_new_path %>
<%= form_with url: my_creators_path, method: :get, class: "d-flex" do |f| %>
  <%= f.select :query, ["Music", "Movie", "Book"],
    class: "form-control",
    placeholder: "Sort"
  %>
  <%= submit_tag "Sort", class: "btn btn-primary" %>
<% end %>
<% @creators.each do |creator| %>
  <div class="card" data-controller="test">
    <p class="card-title"><%= creator.name %></p>
    <div><img src= "<%= creator.poster_url %>", alt="Book poster"></div>
    <p class="card-text"><%= creator.content_type %></p>
    <%= link_to delete_creator_path(creator), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
<% end %>
